{{ 'main-daily.css' | asset_url | stylesheet_tag }}

<div class="page-width main-inspiration">
    <div class="inspiration__banner-title">
      <h3>{{ section.settings.title }}</h3>
      <div>
        <a class="shop-now-link link link--text focus-inset" href="{{ section.settings.link }}">{{ block.settings.button_text }}
          <i class="shop-now-icon"> {% render 'icon-arrow-3' %}  </i>
        </a> 
      </div>
    </div>
    {%- for block in section.blocks -%}
    <div class="inspiration__banner">
        <div class="inspiration__banner-background">
            <img
            srcset="{%- if block.settings.background.width >= 375 -%}{{ block.settings.background | img_url: '375x' }} 375w,{%- endif -%}
              {%- if block.settings.background.width >= 750 -%}{{ block.settings.background | img_url: '750x' }} 750w,{%- endif -%}
              {{ block.settings.background | img_url: 'master' }} {{ block.settings.background.width }}w"
            src="{{ block.settings.background | img_url: '780x' }}"
            loading="lazy"
            alt="{{ block.settings.background.alt | escape }}"
            width="{{ block.settings.background.width }}"
            height="{{ block.settings.background.height }}"
          >
        </div>
        <div class="inspiration__banner-body">
            <div class="inspiration__banner-body-top">
              <h3> {{ block.settings.title }} </h3>
              <p> {{ block.settings.body }}</p>
              <span> {{ block.settings.sale }}</span>
            </div>
            <div>
              <a class="shop-now-link link link--text focus-inset" href="{{ block.settings.link }}">{{ block.settings.button_text }}
                <i class="shop-now-icon"> {% render 'icon-arrow-3' %}  </i>
              </a> 
            </div>
        </div>
    </div>
    {%- endfor -%}
</div>


{% schema %}
{
    "name": "inspiration",
    "class": "inspiration",
    "settings": [
        {
            "type": "text",
            "id":"title",
            "label": "Title",
            "default": "Daily inspiration from StockieÂ®"
        },
        {
          "type": "text",
          "id":"button_text",
          "label": "Button Text",
          "default": "See all products"
        },
        {
          "type": "url",
          "id":"link",
          "label": "Button link",
        }
    ],
    "blocks":[
        {
            "type": "banner",
            "name": "banner",
            "limit":2,
            "settings": [
                {
                    "type": "image_picker",
                    "id":"background",
                    "label": "Background"
                },
                {
                    "type": "text",
                    "id":"title",
                    "label": "Title",
                    "default": "Make this year an iconic one" 
                },
                {
                    "type": "text",
                    "id":"body",
                    "label": "Body",
                    "default": "Sonderful density has taken possession " 
                },
                {
                    "type": "text",
                    "id":"sale",
                    "label": "Sale",
                    "default": "from $29.00" 
                },
                {
                    "type": "url",
                    "id":"link",
                    "label": "Link"
                },
                {
                    "type": "text",
                    "id":"button_text",
                    "label": "Button Text",
                    "default": "Shop Product" 
                }
            ]
        }
    ],
    "presets": [
        {
            "name":"inspiration",
            "blocks":[
                {
                    "type": "banner"
                },
                {
                    "type": "banner"
                }
            ]
        }
    ]
}
{% endschema %}